<div class="d-flex flex-column flex-grow-1">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard" style="text-decoration: none;">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Note</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3">Add Note</h1>
            </div>
        </div>
    </div>

    <div class="card shadow-lg rounded-4 p-3 p-md-4 border-0 flex-grow-1" style="background-color: #ffffff;">
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger mb-4"><%= error %></div>
        <% } %>

        <form action="/dashboard/add" method="POST" class="d-flex flex-column h-100">
            <div class="form-floating mb-4">
                <input type="text" class="form-control" id="title" name="title" placeholder="Note Title" required value="<%= typeof formData !== 'undefined' ? formData.title : '' %>" />
                <label for="title"><i class="fas fa-heading me-2"></i>Title</label>
            </div>

            <div class="form-floating mb-4 flex-grow-1">
                <textarea class="form-control add-note-textarea" id="body" name="body" placeholder="Start writing your note here..." style="height: 400px; resize: vertical;" required><%= typeof formData !== 'undefined' ? formData.body : '' %></textarea>
                <label for="body"><i class="fas fa-edit me-2"></i>Content</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Add Note
                </button>
            </div>
        </form>
    </div>
</div>

<style>
@media (max-width: 575.98px) {
    .add-note-textarea {
        height: 300px !important;
    }
    
    .card {
        padding: 1rem !important;
        border-radius: 1rem !important;
    }
    
    .form-floating {
        margin-bottom: 1rem !important;
    }
    
    .btn-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }
}

@media (min-width: 576px) and (max-width: 767.98px) {
    .add-note-textarea {
        height: 350px !important;
    }
}
</style>
