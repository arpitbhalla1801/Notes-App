<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">Search Results</h1>
        </div>
    </div>
    <div class="row">
        <% if(searchResults != '') { %>
            <% searchResults.forEach(function (note, index) { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card border-primary note-card">
                        <a href="/dashboard/item/<%= note._id %>" class="card-body text-decoration-none note-card-link">
                            <h5 class="card-title"><%= note.title %></h5>
                            <p class="card-text"><%= note.body %></p>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else{ %>
            <div class="col-12">
                <div class="text-center py-5">
                    <h3 class="text-muted">No items found</h3>
                    <p class="text-muted">Try searching with different keywords</p>
                    <a href="/dashboard" class="btn btn-primary">‚Üê Back to Dashboard</a>
                </div>
            </div>
        <% } %>
    </div>
</div>
   